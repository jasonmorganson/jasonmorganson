!!! 5

head

    // Standard Meta
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width")

    // Site Properities
    title= getPreparedTitle()
    meta(name="description", content="#{getPreparedDescription()}")
    meta(name="keywords", content="#{getPreparedKeywords()}")

    // DocPad Meta
    script getBlock('meta').toHTML()

    // DocPad Styles + Our Own
    script getBlock('styles').add(['/vendor/normalize.css','/styles/style.css']).toHTML()

body

    header
    div!= content
    footer

    // jQuery
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js")
    script window.jQuery || document.write('<script src="/vendor/jquery.js"><\/script>')

    // DocPad Scripts + Our Own
	script getBlock('scripts').add(['/vendor/log.js', '/vendor/modernizr.js', "/scripts/script.js"]).toHTML()
